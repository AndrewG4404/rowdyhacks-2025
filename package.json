{
  "name": "goloanme",
  "version": "1.0.0",
  "description": "Community micro-funding platform with simulated GLM credits",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:push": "dotenv -e .env.local -- prisma db push",
    "prisma:seed": "dotenv -e .env.local -- tsx prisma/seed.ts",
    "prisma:studio": "dotenv -e .env.local -- prisma studio",
    "test": "vitest",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@sparticuz/chromium": "^123.0.0",
    "cloudinary": "^2.4.0",
    "jose": "^5.6.0",
    "next": "^14.2.0",
    "next-intl": "^3.19.0",
    "puppeteer-core": "^22.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.0",
    "prettier": "^3.3.0",
    "prisma": "^6.18.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  }
